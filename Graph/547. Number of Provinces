class Solution {
    public int findCircleNum(int[][] isConnected) {
        Set<Integer> visited =new HashSet<>();
        int provinces=0;

        for(int i=0;i<isConnected.length; i++){
            if(!visited.contains(i)){
                dfs(i,isConnected,visited);
                provinces++;
            }
        }
        return provinces;
    }
    private void dfs(int city , int[][] isConnected, Set<Integer> visited){
        visited.add(city);
        for(int curr=0;curr <isConnected[city].length;curr++){
            int connected= isConnected[city][curr];
            if(connected ==1 && !visited.contains(curr)){
                dfs(curr,isConnected,visited);
            }
        }
    }
}
